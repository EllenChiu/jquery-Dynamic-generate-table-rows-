<html xmlns="http://www.w3.org/1999/xhtml"/> 
<head>
    <script src="http://code.jquery.com/jquery-1.9.1.min.js"></script>
    <meta charset="utf-8">
        <script>
            $(document).ready(function() {
                var count = 1;
                $(document).on("click", "#addrows", function() {
                    count = count + 1 * 1;   //count rows
                    if (count < 8) {  
                        $(".trno:last").append("<tr class='newtr' id='tr" + count + "'><td align='center'><input type='text' name='title[]' value=''/> </td> <td align='center'><input type='text' name='conten[]' value=''/></td><td align='center'><input type='button' class='deleterows' value='－'></td></tr>");
                    } else {
                        alert("Only can add more 7 rows");
                    }

                });
                $(document).on("click", ".deleterows", function() {
                    $(this).parents(".newtr").remove();
                    count--;
                });


            });
        </script>
        <body>  
            <input type='button' id='addrows' value='＋'>
                <table class='table table-bordered bank_table' style='margin-top:20px'>
                    <tbody class='trno'>
                        <tr id='trno1'>
                            <td align='center'><input type="text" name="title[]" value=""/></td> 
                            <td align='center'><input type="text" name="conten[]" value=""/></td>
                            <td align='center'></td>
                        </tr>
                    </tbody>
                </table>

        </body>
